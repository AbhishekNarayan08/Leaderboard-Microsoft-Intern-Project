@model UserProfileModel

@using (Html.BeginForm())
{
    <style>
        .col-md-10{
            width:50%;
        }
    </style>
    <div class="form-horizontal">
        <br />
        <h4>User Profile</h4>
        <hr />

        <div class="row">
            <div class="col">
                @Html.LabelFor(model => model.UserId, "User Id", htmlAttributes: new { @class = "control-label col-md-2 label-text" })
                
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @size="30", @width="50%" } })
                    
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="View" class="btn btn-outline-primary" />
            </div>
        </div>
    </div>
    <p style="color:red;">@ViewBag.Message</p>
}

<div style="display:flex">
    <div style="flex:auto">    
            <div class="halfContainer">
                <div class="headingContainer">
                @if (Model?.dict?.Any() == true)
                    {
                        @*<div class="activityLabel">@Model.UserId</div>*@
                        <table class="content-table">
                                <thead>
                                    <tr>
                                        <th scope="col" class="label-text" style="text-align:center">Leaderboard Name</th>
                                        <th scope="col" class="label-text" style="text-align:center">Points</th>
                                        <th scope="col" class="label-text" style="text-align:center">Rank</th>
                                    </tr>
                                </thead>
                                <tbody>
                        @foreach (var leaderboard in Model.dict)
                        {
                                    <tr scope="row">
                                        <td style="text-align:center">@leaderboard.Key</td>

                                        <td style="text-align:center">@leaderboard.Value.Key</td>
                                        <td style="text-align:center">@leaderboard.Value.Value</td>
                                    </tr>
                        }
                        </tbody>
                        </table>
                    }
                    </div>
                    </div>
                    </div>
                    </div>
