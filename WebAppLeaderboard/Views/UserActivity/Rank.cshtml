@model LeaderboardModel

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <br />
        <h4>Get Rank of User</h4>
        <hr />

        <div class="row">
            <div class="col">
                @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2 label-text" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control" } })
                    
                </div>
            </div>
            <div class="col">
                @Html.LabelFor(model => model.Segment, htmlAttributes: new { @class = "control-label col-md-2 label-text" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Segment, new SelectList(Enum.GetValues(typeof(Segment))))
                </div>
            </div>

            <div class="col">
                @Html.LabelFor(model => model.Leaderboard, htmlAttributes: new { @class = "control-label col-md-2 label-text" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Leaderboard, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Leaderboard, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="View" class="btn btn-outline-primary" />
            </div>
        </div>
    </div>
    <p style="color:red;">@ViewBag.Message</p>
}
<div style="display:flex">
    <div style="flex:auto">    
            <div class="halfContainer">
                <div class="headingContainer">
                @if (Model?.Segmentrank != null)
                {
                    <table class="content-table">
        <thead>
            <tr>
                <th scope="col" class="label-text" style="text-align:center">User</th>
                
                <th scope="col" class="label-text" style="text-align:center">@Model.Segment Rank</th>
            </tr>
        </thead>
        <tbody>
            
                <tr scope="row">
                    <td style="text-align:center">@Model.UserId</td>
                    
                    <td style="text-align:center">@Model.Segmentrank</td>
                </tr>
            
        </tbody>
    </table>
                }
                @if (Model?.Activityrank != null)
                {
                    <table class="content-table">
        <thead>
            <tr>
                <th scope="col" class="label-text" style="text-align:center">User</th>
                
                <th scope="col" class="label-text" style="text-align:center">@Model.Segment @Model.Leaderboard Rank</th>
            </tr>
        </thead>
        <tbody>
            
                <tr scope="row">
                    <td style="text-align:center">@Model.UserId</td>
                    
                    <td style="text-align:center">@Model.Activityrank</td>
                </tr>
            
        </tbody>
    </table>
                }
            </div>
            </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Main Page", "Index")
</div>
