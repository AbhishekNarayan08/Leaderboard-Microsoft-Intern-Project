@model PrivateLeaderboard

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <br />
        <h4>Create Private Leaderboard</h4>
        <hr />
        <div class="row">

        <div class="col">
            <div class="col">
                @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "control-label col-md-2 label-text", @size="30"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @size="30" } })
                    
                </div>
            </div>

            <div class="col">
                @Html.LabelFor(model => model.UserId1, htmlAttributes: new { @class = "control-label col-md-2 label-text", @size="30"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserId1, new { htmlAttributes = new { @class = "form-control", @size="30" } })
                    @Html.ValidationMessageFor(model => model.UserId1, "", new { @class = "text-danger" })
                </div>
            </div>
           
            <div class="col">
                @Html.LabelFor(model => model.UserId2, htmlAttributes: new { @class = "control-label col-md-2 label-text", @size="30"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserId2, new { htmlAttributes = new { @class = "form-control", @size="30" } })
                    @Html.ValidationMessageFor(model => model.UserId2, "", new { @class = "text-danger" })
                </div>
            </div>
          
            <div class="col">
                @Html.LabelFor(model => model.UserId3, htmlAttributes: new { @class = "control-label col-md-2 label-text", @size="30"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserId3, new { htmlAttributes = new { @class = "form-control", @size="30" } })
                    @Html.ValidationMessageFor(model => model.UserId3, "", new { @class = "text-danger" })
                </div>
            </div>
        
            <div class="col">
                @Html.LabelFor(model => model.UserId4, htmlAttributes: new { @class = "control-label col-md-2 label-text", @size="30"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserId4, new { htmlAttributes = new { @class = "form-control", @size="30" } })
                    @Html.ValidationMessageFor(model => model.UserId4, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="col">
             <div class="col">
                @Html.LabelFor(model => model.Segment, htmlAttributes: new { @class = "control-label col-md-2 label-text" })
                <div class="col-md-10">
                    @Html.DropDownListFor(m => m.Segment, new SelectList(Enum.GetValues(typeof(Segment))))
                </div>
            </div>

            
             <div class="col">
                @Html.LabelFor(model => model.Leaderboard, htmlAttributes: new { @class = "control-label col-md-2 label-text", @size="30"})
                <div class="col-md-10">
                    @*@Html.DropDownListFor(m => m.Leaderboard, new SelectList(Enum.GetValues(typeof(Activity))))*@
                    @Html.EditorFor(model => model.Leaderboard, new { htmlAttributes = new { @class = "form-control", @size="30" } })
                    @Html.ValidationMessageFor(model => model.Leaderboard, "", new { @class = "text-danger" })
                </div>
            </div>
           
            <div class="col">
                @Html.LabelFor(model => model.PrivateLeaderboardName, htmlAttributes: new { @class = "control-label col-md-2 label-text", @size="30"})
                
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PrivateLeaderboardName, new { htmlAttributes = new { @class = "form-control", @size="30" } })
                    
                </div>
            </div>
        </div>
        </div>
       
        <div class="text-center" class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-outline-primary" />
            </div>
        </div>
    </div>
    <p style="color:red;">@ViewBag.Message</p>
}
@if(Model?.UserId!=null){
    <p>Private Leaderboard Created Successfully</p>
}